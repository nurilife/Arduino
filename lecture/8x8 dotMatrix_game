#include <LedControl.h>

LedControl lc =LedControl(12,11,10,2);

byte font_char[][8] =
{
  {0x00, 0x02, 0x02, 0x02, 0x02, 0x02, 0x7e, 0x00},//ㄱ
  {0x00, 0x7e, 0x02, 0x02, 0x02, 0x02, 0x7e, 0x00},//ㄴ
  {0x00, 0x02, 0x02, 0x02, 0x02, 0x02, 0x7e, 0x00},//ㄷ
  {0x00, 0x02, 0x02, 0x02, 0x02, 0x02, 0x7e, 0x00},//ㄹ
  {0x00, 0x02, 0x02, 0x02, 0x02, 0x02, 0x7e, 0x00},//ㅁ
  {0x00, 0x02, 0x02, 0x02, 0x02, 0x02, 0x7e, 0x00},//ㅂ
  {0x00, 0x02, 0x02, 0x02, 0x02, 0x02, 0x7e, 0x00},//ㅅ
  {0x00, 0x02, 0x02, 0x02, 0x02, 0x02, 0x7e, 0x00},//ㅇ
};

void setup() {
  for(int i= 0; i<2; i++){
   lc.shutdown(i,false);
   lc.setIntensity(i,5);
   lc.clearDisplay(i);
  } 
  pinMode(2, INPUT_PULLUP);
}

void loop(){
  if(digitalRead(2) == LOW){
    display_char(0, random(8));
    display_char(1, random(8));
    delay(500);
  }
}

void display_char(int unit, int col){
  for(int i = 0; i<8; ){
    lc.setRow(unit, i, font_char[col][i]);
  }
}
