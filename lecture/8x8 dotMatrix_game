#include <LedControl.h>

LedControl lc =LedControl(12,11,10,2);

byte font_char[][8] =
{
  {0b00000000,
  0b01111110,
  0b00000010,
  0b00000010,
  0b00000010,
  0b00000010,
  0b00000010,
  0b00000000},//ㄱ
  {0b00000000,
  0b01000000,
  0b01000000,
  0b01000000,
  0b01000000,
  0b01000000,
  0b01111110,
  0b00000000},//ㄴ
  {0b00000000,
  0b01111110,
  0b01000000,
  0b01000000,
  0b01000000,
  0b01000000,
  0b01111110,
  0b00000000},//ㄷ
  {0b00000000,
  0b01111110,
  0b00000010,
  0b01111110,
  0b01000000,
  0b01000000,
  0b01111110,
  0b00000000},//ㄹ
  {0b00000000,
  0b01111110,
  0b01000010,
  0b01000010,
  0b01000010,
  0b01000010,
  0b01111110,
  0b00000000},//ㅁ
  { 0b00000000,
  0b01000010,
  0b01000010,
  0b01111110,
  0b01000010,
  0b01000010,
  0b01111110,
  0b00000000},//ㅂ
  {0b00000000,
  0b00000100,
  0b00001000,
  0b00010000,
  0b00101000,
  0b01000100,
  0b00000010,
  0b00000000},//ㅅ
  {0b00000000,
  0b00111100,
  0b01000010,
  0b01000010,
  0b01000010,
  0b01000010,
  0b00111100,
  0b00000000},//ㅇ
};

void setup() {
  for(int i= 0; i<2; i++){
   lc.shutdown(i,false);
   lc.setIntensity(i,5);
   lc.clearDisplay(i);
  } 
  pinMode(2, INPUT_PULLUP);
}

void loop(){
  if(digitalRead(2) == LOW){
    display_char(0, random(8));
    display_char(1, random(8));
    delay(500);
  }
}

void display_char(int unit, int col){
  for(int i = 0; i<8; i++){
    lc.setRow(unit, i, font_char[col][i]);
  }
}
